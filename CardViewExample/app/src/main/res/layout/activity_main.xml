<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center">
    <!-- we can also design card view by code in .java file -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="340sp"
        android:layout_height="500sp"
        app:cardElevation="11sp"
        app:cardCornerRadius="20sp"
        app:cardBackgroundColor="@color/lightPink">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            />

        <EditText
            android:layout_width="310sp"
            android:layout_height="50sp"
            android:id="@+id/editText"
            android:hint="Enter Username"
            android:paddingLeft="10sp"
            android:layout_marginLeft="15sp"
            android:background="@drawable/edittext_border"
            android:layout_marginTop="120sp" />

        <EditText
            android:layout_width="310sp"
            android:layout_height="50sp"
            android:id="@+id/editText"
            android:hint="Enter Password"
            android:paddingLeft="10sp"
            android:layout_marginLeft="15sp"
            android:background="@drawable/edittext_border"
            android:layout_marginTop="180sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="240sp"
            android:text="By clicking on login, I aggree to terms and condition."
            android:textStyle="normal"
            android:textColor="@color/black"
            android:paddingLeft="15sp"
            android:paddingRight="11sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="290sp"
            app:backgroundTint="@null"
            android:background="@drawable/edit_button"
            android:layout_gravity="center_horizontal" />



    </androidx.cardview.widget.CardView>


</LinearLayout>